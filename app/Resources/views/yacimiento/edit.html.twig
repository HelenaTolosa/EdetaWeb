{% extends 'base.html.twig' %}

{% block content %}
    <h1>Editar yacimiento</h1>
    <div class="row">
        <div class='col-sm-7'>
    {{ form_start(edit_form) }}
    <h5><b>Nombre: </b></h5>{{ form_widget(edit_form.nombreYac) }}
    <h5><b>Expediente: </b></h5>{{ form_widget(edit_form.expediente) }}
    <h5><b>Municipio: </b></h5>{{ form_widget(edit_form.municipio) }}
    <h5><b>Fecha fin excavación: </b></h5>{{ form_widget(edit_form.fechaExca) }}
    <h5><b>Coordenadas: </b></h5>{{ form_widget(edit_form.coordenadas) }}
    <h5><b>Arqueólogo responsable: </b></h5>{{ form_widget(edit_form.arqueologo) }}
    <h5><b>Época: </b></h5>{{ form_widget(edit_form.epoca) }}
