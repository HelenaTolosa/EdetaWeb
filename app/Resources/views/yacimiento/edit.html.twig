        {{ form_widget(edit_form) }}
        <input type="submit" value="Editar" />
    {{ form_end(edit_form) }}
    <br>
    <ul>
        <li>
            <a href="{{ path('yacimiento_index') }}">Volver al listado</a>
        </li>
    <br>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
        </div>
    </div>
{% endblock %}
