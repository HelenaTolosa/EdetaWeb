{% extends 'base.html.twig' %}

{% block content %}
    <h1>Provincias list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provincium in provincias %}
            <tr>
                <td><a href="{{ path('provincia_show', { 'id': provincium.id }) }}">{{ provincium.id }}</a></td>
                <td>{{ provincium.nombre }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('provincia_show', { 'id': provincium.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('provincia_edit', { 'id': provincium.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('provincia_new') }}">Crear una nueva provincia</a>
        </li>
    </ul>
{% endblock %}
