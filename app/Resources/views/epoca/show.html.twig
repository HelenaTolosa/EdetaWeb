{% extends 'base.html.twig' %}

{% block content %}
    <h1>Epoca</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ epoca.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ epoca.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('epoca_index') }}">Volver al listado</a>
        </li>
        <li>
            <a href="{{ path('epoca_edit', { 'id': epoca.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
