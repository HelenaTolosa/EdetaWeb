{% extends 'base.html.twig' %}

{% block content %}
    <h1>Listado de Arqueólogos colegiados</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellidos</th>
                <th>Num. de Colegiado</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for arqueologo in arqueologos %}
            <tr>
                <td><a href="{{ path('arqueologo_show', { 'id': arqueologo.id }) }}">{{ arqueologo.id }}</a></td>
                <td>{{ arqueologo.nombre }}</td>
                <td>{{ arqueologo.apellidos }}</td>
                <td>{{ arqueologo.numColegiado }}</td>
                <td>{{ arqueologo.email }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('arqueologo_show', { 'id': arqueologo.id }) }}">Ver</a>
                        </li>
                        <li>
                            <a href="{{ path('arqueologo_edit', { 'id': arqueologo.id }) }}">Editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('arqueologo_new') }}">Nuevo arqueólogo</a>
        </li>
    </ul>
{% endblock %}
