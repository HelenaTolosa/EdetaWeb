{% extends 'base.html.twig' %}

{% block content %}
    <h1>Municipio</h1>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ municipio.id }}</td>
            </tr>
            <tr>
                <th>Municipio</th>
                <td>{{ municipio.nommunicipio }}</td>
            </tr>
            <tr>
                <th>Provincia</th>
                <td>{{ municipio.provincia }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('municipio_index') }}">Volver al listado</a>
        </li>
        <li>
            <a href="{{ path('municipio_edit', { 'id': municipio.id }) }}">Editar</a>

        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
        
    </ul>
{% endblock %}
